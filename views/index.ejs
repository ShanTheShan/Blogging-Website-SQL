<!DOCTYPE html>
<html lang="en">
  <!--practising the principle of Separation of Concern (SOC)-->
  <!--header tag is declared once, then we dont need it anymore, any changes, go to the templates folder-->
  <!--only functional stuff goes here!-->
  <%-include('index_templates/header')-%>
  <body>
    <div class="container">
      <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
          <div class="col-4 pt-1"></div>
          <div class="col-4 text-center">
            <a class="blog-header-logo text-dark" href="/">The Blog</a>
          </div>
          <div class="col-4 d-flex justify-content-end align-items-center">
            <a class="btn btn-sm btn-outline-secondary" style="margin-left: 15px" href="/login"
              >Sign In</a
            >
          </div>
        </div>
      </header>

      <div class="nav-scroller py-1 mb-2">
        <nav class="nav d-flex justify-content-center"></nav>
      </div>
      <div class="row mb-2">
        <!--dynamically render as many divs based off iteration on the length of posts, post is the index-->
        <% posts.forEach((post) => { %>
        <div class="col-md-6">
          <div
            class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative"
          >
            <div class="col p-4 d-flex flex-column position-static">
              <h3 class="mb-0"><%= post.title %></h3>
              <h5 class="mb-0"><%= post.subtitle %></h5>
              <div class="mt-4"></div>
              <p class="mb-0 font-weight-light font-italic">Publised: <%= post.publishedDate %></p>
              <p class="mb-0 font-weight-light font-italic">By: <%= post.publishedBy %></p>
              <div class="mt-4"></div>
              <p class="card-text mb-auto"><%= post.body %></p>
              <a href="/reader?articleID=<%= post.articleID %>" class="stretched-link"
                >Continue reading</a
              >
            </div>
            <div class="col-auto d-none d-lg-block"></div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <main role="main" class="container">
      <div class="row">
        <div class="col-md-8 blog-main"></div>
      </div>
    </main>
    <script>
      //if user logged in, display post button
    </script>
    <%-include('index_templates/footer')-%>
  </body>
</html>
